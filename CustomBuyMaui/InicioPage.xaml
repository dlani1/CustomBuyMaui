<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CustomBuyMaui.InicioPage"
             Shell.NavBarIsVisible="False"> <Grid BackgroundColor="#F5F5F5">
        <VerticalStackLayout 
            Spacing="30" 
            VerticalOptions="Center" 
            HorizontalOptions="Center">

            <Image
                Source="custom_buy_logo.png"
                WidthRequest="250"
                SemanticProperties.Description="Logo de Custom Buy" />

            <Button
                Text="Inicio"
                Clicked="OnStartButtonClicked"
                WidthRequest="220"
                HeightRequest="55"
                CornerRadius="28"
                BackgroundColor="#004D40"
                TextColor="White"
                FontSize="Large"
                FontAttributes="Bold"
                BorderWidth="1"
                BorderColor="DarkGreen"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>