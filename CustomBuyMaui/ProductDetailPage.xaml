<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CustomBuyMaui.ProductDetailPage"
    Title="Detalle del producto">

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
            <Image Source="{Binding ImageSource}" HeightRequest="200" Aspect="AspectFit" />
            <Label Text="{Binding Title}" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Label Text="{Binding Description}" FontSize="16" TextColor="#555" HorizontalTextAlignment="Center"/>
            <Button Text="Comprar ahora" BackgroundColor="#004D40" TextColor="White" CornerRadius="10" WidthRequest="200" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
    