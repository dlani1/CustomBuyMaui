<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CustomBuyMaui.MugCustomizationPage"
             BackgroundColor="#F5F5F5" 
             Title="Conecta tu Dispositivo">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
            <Image Source="tu_logo.png" HeightRequest="50" Margin="0,0,0,30" HorizontalOptions="Center"/> 
            
            <Frame BackgroundColor="White"
                   CornerRadius="10"
                   HasShadow="True"
                   Padding="20"
                   WidthRequest="400" 
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
                
                <StackLayout Spacing="25">
                    <Label Text="Conecta tu Dispositivo"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#1B5E20" 
                           HorizontalTextAlignment="Center" />
                    <Label Text="Elige el método de conexión para enviar tu imagen"
                           FontSize="16"
                           TextColor="Gray"
                           HorizontalTextAlignment="Center"
                           Margin="0,-10,0,10"/>

                    <!-- Grid de Botones (Bluetooth y QR) -->
                    <Grid ColumnDefinitions="*,*">
                        <Button Text="  Bluetooth"
                                Grid.Column="0"
                                BackgroundColor="#1B5E20"
                                TextColor="White"
                                FontSize="18"
                                HeightRequest="55"
                                CornerRadius="8"
                                HorizontalOptions="Fill"
                                Margin="0,0,5,0"
                                ImageSource="bluetooth_icon.png"/> 
                        <Button Text="  Código QR"
                                Grid.Column="1"
                                BackgroundColor="#E0E0E0" 
                                TextColor="#616161"
                                FontSize="18"
                                HeightRequest="55"
                                CornerRadius="8"
                                HorizontalOptions="Fill"
                                Margin="5,0,0,0"
                                ImageSource="qr_icon.png"/> 
                    </Grid>

                    <!-- ÁREA DINÁMICA DE DISPOSITIVOS -->
                    <Frame BackgroundColor="#F5F5F5" 
                           CornerRadius="8"
                           HasShadow="False"
                           Padding="10"
                           HeightRequest="200" 
                           VerticalOptions="Fill"
                           Margin="0,10,0,0">
                        
                        <!-- CollectionView para la lista de dispositivos -->
                        <!-- SelectionChanged llama a nuestro método OnDeviceSelected en C# -->
                        <CollectionView x:Name="DevicesCollectionView" 
                                        ItemsSource="{Binding DispositivosEncontrados}" 
                                        SelectionMode="Single"
                                        SelectionChanged="OnDeviceSelected">
                            <CollectionView.EmptyView>
                                <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="5">
                                    <Image Source="bluetooth_large_icon.png" HeightRequest="40" HorizontalOptions="Center"/>
                                    <Label Text="Presiona 'Buscar Dispositivos' para escanear." 
                                           HorizontalOptions="Center" 
                                           TextColor="Gray"/>
                                </StackLayout>
                            </CollectionView.EmptyView>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout Padding="10" BackgroundColor="Transparent">
                                        <!-- Muestra el nombre del dispositivo -->
                                        <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold" TextColor="#333333" />
                                        <!-- Muestra la ID (opcional) -->
                                        <Label Text="{Binding Id}" FontSize="12" TextColor="#616161" />
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Frame>

                    <!-- Botón de Búsqueda -->
                    <Button x:Name="SearchButton" 
                            Text="Buscar Dispositivos"
                            BackgroundColor="#1B5E20"
                            TextColor="White"
                            FontSize="20"
                            HeightRequest="60"
                            CornerRadius="8"
                            HorizontalOptions="Center"
                            WidthRequest="250"
                            Margin="0,20,0,0"
                            Clicked="OnSearchDevicesClicked"/>

                </StackLayout>
            </Frame>
        </StackLayout>
    </Grid>
</ContentPage>