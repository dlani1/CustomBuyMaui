    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CustomBuyMaui"
    Title="CustomBuyMaui">

    <!-- Página principal -->
    <ShellContent
        Title="Home"
