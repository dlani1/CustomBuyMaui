<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CustomBuyMaui.MainPage">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Label 
            Text="Escanea este código QR desde tu celular para enviar la imagen"
            FontSize="18"
            HorizontalOptions="Center"
            TextColor="Black"/>

        <Image 
            x:Name="imgQR"
            WidthRequest="200"
            HeightRequest="200"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>
    </VerticalStackLayout>

</ContentPage>
