<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CustomBuyMaui.SendImagePage"
             Title="Enviar Imagen"
             BackgroundColor="#F5F5F5">

    <Grid>
        <!-- Contenido principal: Instrucciones de Envío -->
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
            
            <!-- Marco principal de la tarjeta -->
            <Frame BackgroundColor="White"
                   CornerRadius="10"
                   HasShadow="True"
                   Padding="30"
                   WidthRequest="450" 
                   HorizontalOptions="Center">
                
                <StackLayout Spacing="30">
                    
                    <Image Source="upload_icon.png" HeightRequest="60" WidthRequest="60" HorizontalOptions="Center" />
                    
                    <Label Text="Enviar Imagen"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#1B5E20" 
                           HorizontalTextAlignment="Center" />
                    
                    <Label Text="Envía tu imagen desde tu dispositivo móvil"
                           FontSize="16"
                           TextColor="Gray"
                           HorizontalTextAlignment="Center"
                           Margin="0,-15,0,5"/>

                    <!-- Contenedor de Instrucciones -->
                    <Frame BackgroundColor="#F5F5F5"
                           CornerRadius="8"
                           Padding="20"
                           HasShadow="False">
                        <StackLayout Spacing="10">
                            <Label Text="Instrucciones:" FontAttributes="Bold" TextColor="#333333"/>
                            <Label Text="1. Abre tu galería de fotos" TextColor="#666666"/>
                            <Label Text="2. Selecciona la imagen que deseas" TextColor="#666666"/>
                            <Label Text="3. Comparte vía Bluetooth o QR" TextColor="#666666"/>
                            <Label Text="4. Selecciona 'Kiosco Personalización'" TextColor="#666666"/>
                        </StackLayout>
                    </Frame>

                    <!-- Botón para iniciar el modo de recepción -->
                    <Button x:Name="ReceiveButton"
                            Text="Listo para Recibir"
                            BackgroundColor="#1B5E20"
                            TextColor="White"
                            FontSize="20"
                            HeightRequest="60"
                            CornerRadius="8"
                            Clicked="OnReadyToReceiveClicked"
                            Margin="0,10,0,0"/>
                </StackLayout>
            </Frame>
        </StackLayout>

        <!-- Overlay de Éxito (Oculto por defecto) -->
        <Frame x:Name="SuccessOverlay"
               IsVisible="False"
               BackgroundColor="#1B5E20"
               Padding="40"
               CornerRadius="15"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               WidthRequest="350"
               HeightRequest="350"
               ZIndex="10">
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="25">
                <Image Source="check_circle.png" HeightRequest="80" WidthRequest="80" HorizontalOptions="Center" />
                
                <Label Text="¡Éxito!"
                       FontSize="36"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Center"/>
                
                <Label Text="Imagen recibida exitosamente."
                       FontSize="18"
                       TextColor="White"
                       HorizontalTextAlignment="Center"/>
                
                <Button Text="Continuar"
                        BackgroundColor="White"
                        TextColor="#1B5E20"
                        CornerRadius="8"
                        Clicked="OnContinueClicked"/>
            </StackLayout>
        </Frame>

    </Grid>
</ContentPage>